			<script>
			require(['jquery','owl_carousel'], function($){
				$(function () { // to ensure that code evaluates on page load
					$('.slider_<?php echo $random; ?> .product-items').owlCarousel({
						// loop:true,
						nav:true,
						dots:false,
						margin:20,
						responsive:{
