$Isenable = $objectManager->get('Magento\Framework\App\Config\ScopeConfigInterface')->getValue('productslider/general/enable');
$random = md5(uniqid(rand(), true));
if($Isenable) {
?>
	<div class="ivory_productslider slider_<?php echo $random; ?>">
